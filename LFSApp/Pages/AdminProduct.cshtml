@page
@model LFSApp.Pages.AdminProductModel
@{
    ViewData["Title"] = "AdminCategory Page ";
}


<div class="main-content" id="mainContent">
    <!-- Top Navbar -->
    <div class="top-navbar">
        <button class="sidebar-toggle" id="sidebarToggle" aria-expanded="false" aria-controls="sidebar">
            <i class="fas fa-bars"></i>
        </button>
        <div class="user-info">
            <span>Welcome, Olamide</span>
            <div class="user-avatar">A</div>
            <button class="btn btn-outline-dark btn-sm">
                <i class="fas fa-sign-out-alt"></i>
            </button>
        </div>
    </div>

    <!-- Content Area -->
    <div class="content-area">
        <!-- Dashboard Overview -->
        <div class="container mt-5">
            <h2 class="mb-4">Add New Category</h2>
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Category.CategoryName" class="form-label">Category Name</label>
                    <input asp-for="Category.CategoryName" class="form-control" placeholder="Enter category name" />
                    <span asp-validation-for="Category.CategoryName" class="text-su"></span>
                </div>



                <button type="submit" class="btn btn-primary">Add Category</button>
            </form>
        </div>

    </div>

    <div class="container py-4">
  

        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle mb-0 bg-white " >
                <thead class="table-light">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Category Name</th>
                        <th scope="col" class="text-end">Actions</th>
                      
                    </tr>
                </thead>
                <tbody id="product-body">
                    <!-- Example rows -->
                    @foreach (var item in Model.Categories)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.CategoryName</td>
                           

                            <td class="text-end">

                                <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id"
                                      onsubmit="return confirm('Are you sure you want to delete this Category?');"
                                      style="display:inline;">
                                    <button type="submit" class=" btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>

</div>
