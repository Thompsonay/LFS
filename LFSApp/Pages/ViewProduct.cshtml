@page "{id:int}"
@model LFSApp.Pages.ViewProductModel
@{
    ViewData["Title"] = "View Product";
}

@if (Model.Product != null)
{
    <div class="container mt-5">
        <div class="row align-items-center">
            <!-- Image Preview Section -->
            <div class="container my-4 pt-5">
                <div class="row">
                    <!-- LEFT SIDE (Main Image + Thumbnails) -->
                    <div class="col-md-6 text-center">
                        <!-- Main Image -->
                        <div class="mb-3">
                            <img id="mainProductImage"
                                 src="@(Model.Product.Images != null && Model.Product.Images.Any()
                                                              ? Model.Product.Images.First().ImageUrl
                                                              : "/uploads/no-image.png")"
                             class="img-fluid rounded shadow"
                             alt="@Model.Product.Name"
                             style="width:70%;">
                    </div>

                        <!-- Thumbnails -->
                        <div class="d-flex justify-content-center gap-2 flex-wrap">
                        @if (Model.Product.Images != null && Model.Product.Images.Any())
                            {
                                foreach (var img in Model.Product.Images)
                                {
                                    <img src="@img.ImageUrl" alt="Thumbnail"
                                         class="img-thumbnail"
                                         style="width: 80px; height: 80px; object-fit: cover; cursor: pointer;"
                                         onclick="changeMainImage('@img.ImageUrl')" />
                                }
                            }
                            else
                            {
                                <img src="/uploads/no-image.png" alt="No image"
                                     class="img-thumbnail"
                                     style="width: 80px; height: 80px;" />
                            }
                        </div>
                    </div>

                    <!-- RIGHT SIDE (Product Details) -->
                    <div class="col-md-6 d-flex flex-column justify-content-center">
                        <h2 class="mb-2">@Model.Product.Name</h2>
                        <p class="text-muted mb-2 fs-4">₦@Model.Product.Price.ToString("N0")</p>
                        <p class="mb-3">@Model.Product.Description</p>

                        <!-- Quantity Selector -->
                        <div class="counts mb-3">
                            <button id="minus" class="counts_btns">-</button>
                            <input type="number" name="productCount" min="1" step="1" max="999"
                                   class="product_count" id="productCount" value="1">
                            <button id="plus" class="counts_btns">+</button>
                        </div>

                        <!-- Add to Cart + Back -->
                        <div style="display:flex;">
                            <form method="post" asp-page="/CartPage" asp-page-handler="AddToCart">
                                <input type="hidden" name="productId" value="@Model.Product.Id" />
                                <input type="hidden" name="name" value="@Model.Product.Name" />
                                <input type="hidden" name="price" value="@Model.Product.Price" />
                                <input type="hidden" name="imageUrl" value="@Model.Product.Images?.FirstOrDefault()?.ImageUrl" />
                                <input type="hidden" id="hiddenQuantity" name="quantity" value="1" />

                                <input type="hidden" name="source" value="viewproduct" />
                                <button type="submit" class="btn btn-primary"> Add to Cart</button>
                            </form>

                            <a href="/Shop" class="btn btn-outline-secondary ms-2">Back to Shop</a>
                        </div>
                    </div>
                </div>
            </div>

        


          
           
        </div>
    </div>

}
else
{
    <div style="text-align: center; padding: 4rem;">
        <h1>Product Not Found</h1>
        <p>The product you're looking for doesn't exist.</p>
        <a asp-area="" asp-page="/Shop/Index" class="btn">Back to Shop</a>
    </div>
}
